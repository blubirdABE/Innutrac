<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="false" >

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter a food item"
        android:lines="1"
        android:maxLines="1"
        android:overScrollMode="never"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sizeBar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sizeBar"
        android:layout_marginBottom="26dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autoCompleteTextView1"
        android:layout_below="@+id/autoCompleteTextView1"
        android:layout_marginTop="31dp"
        android:text="Serving Portion (g):"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/sizeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/serving_sizeET"
        android:layout_below="@+id/serving_sizeET"
        android:layout_marginTop="26dp"
        android:max="90" />

    <EditText
        android:id="@+id/serving_sizeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/autoCompleteTextView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/carb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_dark_rect"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:text="Carb"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/carb_edit"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/protein_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_light_rect"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="Protein"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/protein_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/sodium_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_dark_rect"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:text="Sodium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sodium_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cholest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_light_rect"
                android:textColor="#ffffff"
                android:text="Cholest"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cholest_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentRight="true"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/fats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_dark_rect"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:text="Fats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/fats_edit"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/sugar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_light_rect"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:text="Sugar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sugar_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" >

            <TextView
                android:id="@+id/fiber_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_light_rect"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:text="Fiber"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fiber_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/calories_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_light_rect"
                android:padding="4dp"
                android:radius="8dp"
                android:textColor="#ffffff"
                android:text="Calories"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/calories_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned" />
        </TableRow>
    </TableLayout>

</RelativeLayout>